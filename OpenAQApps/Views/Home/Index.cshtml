@using APILibrary.Models;

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OpenQ</title>
    <style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }
</style>

</head>
<body>
    <div>
        <table border="1" style="border:1px !important;border-width:1px;">
            <tr>
                <th>Location</th>
                <th>
                    measurements
                </th>
            </tr>
            @foreach (var location in Model.results)
            {
                <tr>
                    <td style="vertical-align: top;">@location.location</td>
                    <td>
                        <table>
                            <tr>
                                <td>parameter</td>
                                <td>value</td>
                                <td>unit</td>
                            </tr>
                            @foreach (var mea in @location.measurements)
                            {
                                <tr>
                                    <td>@mea.parameter</td>
                                    <td>@mea.value</td>
                                    <td>@mea.unit</td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            }
            </table>
    </div>
</body>
</html>